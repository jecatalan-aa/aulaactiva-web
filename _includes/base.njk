    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
            background-color: #F8F9FA;
            color: #0B2545;
        }
        /* Paleta de Colores Oficial de AulaActiva - Precisa */
        :root {
            --azul: #0584D3;
            --verde: #2CAE5F;
            --rojo: #E6212A;
            --amarillo: #F8C732;
            --azul-oscuro: #0B2545;
            --gris-claro: #F8F9FA;
            --gris-texto: #495057;
        }

        .bg-aa-blue { background-color: var(--azul); }
        .bg-aa-green { background-color: var(--verde); }
        .bg-aa-red { background-color: var(--rojo); }
        .bg-aa-yellow { background-color: var(--amarillo); }
        .bg-aa-darkblue { background-color: var(--azul-oscuro); }

        .text-aa-blue { color: var(--azul); }
        .text-aa-green { color: var(--verde); }
        .text-aa-red { color: var(--rojo); }
        .text-aa-yellow { color: var(--amarillo); }

        .border-aa-blue { border-color: var(--azul); }
        .border-aa-green { border-color: var(--verde); }
        .border-aa-red { border-color: var(--rojo); }
        .border-aa-yellow { border-color: var(--amarillo); }

        .hero-bg {
            background-image: url('./images/herobanner_inicio.jpg');
            background-size: cover;
            background-position: center;
        }

        .cta-button {
            transition: all 0.3s ease;
        }
        .cta-button:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        
        .nav-link {
            position: relative;
            transition: color 0.3s ease;
        }
        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 3px;
            bottom: -6px;
            left: 50%;
            transform: translateX(-50%);
            background-color: var(--azul);
            border-radius: 2px;
            transition: width 0.3s ease;
        }
        .nav-link:hover::after, .nav-link.active::after {
            width: 70%;
        }
        
        /* Animaciones */
        .fade-in-section {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .fade-in-section.is-visible {
            opacity: 1;
            transform: translateY(0);
        }
        
        #mobile-menu {
            transition: transform 0.3s ease-in-out;
        }
        .mobile-nav-link {
            padding: 1rem 0;
        }

        .carousel-container {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .carousel-container::-webkit-scrollbar {
            display: none;
        }

        /* Contenedor responsivo para video */
        .video-responsive {
            position: relative;
            overflow: hidden;
            width: 100%;
            padding-top: 56.25%; /* 16:9 Aspect Ratio */
        }
        .video-responsive iframe {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 100%;
        }
        
    </style>
</head>
<body>
    <!-- HEADER -->
    <header class="bg-white/80 backdrop-blur-lg fixed top-0 left-0 right-0 z-50">
        <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
            <a href="#" class="flex items-center space-x-3" onclick="navigateTo('inicio')">
                <img src="./images/logoAA_TDE.svg" alt="Logo AulaActiva" class="h-24">
            </a>

            <!-- Menu Desktop -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="#" id="nav-inicio" class="nav-link active font-semibold text-aa-darkblue" onclick="navigateTo('inicio')">Inicio</a>
                <a href="#" id="nav-servicios" class="nav-link font-semibold text-aa-darkblue" onclick="navigateTo('servicios')">Servicios</a>
                <a href="#" id="nav-nosotros" class="nav-link font-semibold text-aa-darkblue" onclick="navigateTo('nosotros')">Nosotros</a>
                <a href="/blog/" class="nav-link font-semibold text-aa-darkblue" onclick="navigateTo('blog')">Blog</a>
            </div>

            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-aa-darkblue focus:outline-none">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                </button>
            </div>
        </nav>
        <div id="mobile-menu" class="md:hidden bg-white/95 backdrop-blur-lg absolute top-full left-0 w-full transform -translate-x-full">
            <div class="flex flex-col items-center">
                <a href="#" class="mobile-nav-link font-semibold w-full text-center" onclick="navigateTo('inicio'); closeMobileMenu();">Inicio</a>
                <a href="#" class="mobile-nav-link font-semibold w-full text-center" onclick="navigateTo('servicios'); closeMobileMenu();">Servicios</a>
                <a href="#" class="mobile-nav-link font-semibold w-full text-center" onclick="navigateTo('nosotros'); closeMobileMenu();">Nosotros</a>
                <a href="#" class="mobile-nav-link font-semibold w-full text-center" onclick="navigateTo('blog'); closeMobileMenu();">Blog</a>
            </div>
        </div>
    </header>
  <main>
    {{ content | safe }}
  </main>
